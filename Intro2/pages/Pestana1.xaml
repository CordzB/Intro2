<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Intro2.pages.Pestana1"
             Title="Pestana1/ SUMA">
    <VerticalStackLayout Padding="30" Spacing="10">
        <Label Text="Ingrese primer numero" />
        <Entry x:Name="N1" Keyboard="Numeric" />

        <Label Text="Ingrese segundo numero" />
        <Entry x:Name="N2" Keyboard="Numeric" />

        <Label Text="Resultado" />
        <Entry x:Name="Resultado" IsReadOnly="True" />

        <Button x:Name="btnSumar" Text="Sumar" Background="Green"   Clicked="btnSumar_Clicked" />
        <Button x:Name="btnLimpiar" Text="Limpiar" Background="Red" Clicked="btnLimpiar_Clicked"/>
    </VerticalStackLayout>
</ContentPage>